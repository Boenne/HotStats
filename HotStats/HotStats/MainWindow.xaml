<Window x:Class="HotStats.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HotStats"
        xmlns:userControls="clr-namespace:HotStats.UserControls"
        mc:Ignorable="d"
        Title="HotStats" Height="1000" Width="1000"
        DataContext="{Binding MainViewModel, Source={StaticResource ViewModelLocator}}">
    <Window.Background>
        <SolidColorBrush Color="CadetBlue"></SolidColorBrush>
    </Window.Background>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <userControls:LoadDataUserControl Grid.Row="0" />
        <userControls:DataPresenterUserControl Grid.Row="1" />
        <userControls:AverageStatsUserControl Grid.Row="2"></userControls:AverageStatsUserControl>
    </Grid>
</Window>