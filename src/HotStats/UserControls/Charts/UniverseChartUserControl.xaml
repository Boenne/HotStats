<UserControl x:Class="HotStats.UserControls.Charts.UniverseChartUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HotStats.ViewModels.Charts"
             xmlns:wpf="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
             DataContext="{Binding UniverseChartViewModel, Source={StaticResource ViewModelLocator}}">
    <wpf:PieChart Series="{Binding SeriesCollection}" LegendLocation="Left" Height="300" Width="426">

    </wpf:PieChart>
</UserControl>
